extends ../../layout/main.pug

block variables
  -var fallback = "Arial, sans-serif"
  -var title = "Tempo"
  -var white = "#ffffff"
  -var max_w = 600
  -var mob = 480
  -var img_path = "./img/"
  -var bg_color= "#fcfcfc"
  -var gold = "#EACB3C"
  -var greyText = "#889098"
  -var externalFonts = []
block conditionals
block styles
  style(type="text/css")
    include:scss(outputStyle="compressed") ./styles/inline.scss
    include:clean-css ./styles/index.css

block content

  // CONTAINER TABLE
  table(width="100%")&attributes(tableAtt)
    tr
      td(align="center" style=`background-color: ${bg_color};` bgcolor=bg_color)
        //  WRAPPER TABLE
        table(align="center" width=max_w class="mobile-table")&attributes(tableAtt)
          td
            include /includes/modules/preheader.pug
            include components/header.pug
            include components/buyNow.pug
            include components/mainContent.pug
            include components/footer.pug
