extends ../../layout/main.pug

block variables
  -var fallback = "Open Sans, Helvetica, Arial, sans-serif"
  -var title = "Email Template"
  -var white = "#ffffff"
  -var max_w = 600
  -var mob = 480
  -var img_path = "./img/"
  -var bg_color= "#eeeeee"
  -var bright_orange = "#E8853C"
  -var externalFonts = []
block conditionals
block styles
  style(type="text/css")
    include:scss(outputStyle="compressed") ./styles/inline.scss
    include:clean-css ./styles/index.css

block content

  // CONTAINER TABLE
  table(width="100%")&attributes(tableAtt)
    tr
      td(align="center" style=`background-color: ${bg_color};` bgcolor=bg_color)
        //  WRAPPER TABLE
        table(align="center" width=max_w class="mobile-table")&attributes(tableAtt)
          td
            include components/intro.pug
            include components/hero.pug
            include components/safety.pug
            include components/dailyStart.pug
            include components/BMD.pug
            include components/ISI.pug
